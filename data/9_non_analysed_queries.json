#Get the mapping of the blog index
GET /blog/_mapping
#Perform a prefix query on the non-analyzed values
POST /blog/_search
{
  "query": {
    "prefix": {
       "title.keyword": "My Combell Power Tips:"
    }
  }
}
#Execute a query on the title field which is analyzed
POST /blog/_search
{
  "query": {
    "match": {
      "title": "Tips:"
    }
  }
}
#Combined multiple filters in a boolean filter (must => and, must_not => not, should=> or)
POST /blog/_search
{
  "query": {
    "bool": {
      "must" : [
          {
             "term" : {
             "language" : "en"
           }
            },
            {
              "range" : {
                "date" : {
                  "gte" : "2016-01-01",
                  "format" : "yyyy-MM-dd"
                }
              }
            }            
          ],
          "must_not" : [
            {
              "term" : {
                "category" : "joomla"
              }
            }
          ],
          "should" : [
            {
              "term" : {
                "category" : "Hosting"
              }
            },
            {
              "term" : {
                "category" : "evangelist"
              }
            }            
          ]
        }
      }
    }
  }
}
